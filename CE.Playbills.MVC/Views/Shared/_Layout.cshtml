<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CE.Playbills.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/Playbills.css" />
        <link rel="stylesheet" href="_content/CE.ArchiveWebSites.Core/css/shared.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/Playbills.bundle.min.css" />
    </environment>
</head>
<body>
    <partial name="_CookieConsentPartial" />
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col col-lg-9 container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <div class="col col-lg-3">
                <div>
                    <a class="btn btn-success" asp-area="" asp-controller="MediaRecords" asp-action="SearchResults">Pretend you've searched for media resources</a>
                </div>

            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - CE.Playbills.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
