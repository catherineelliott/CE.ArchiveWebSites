@model MediaResource
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Url.Content(Model.ResourceUrl)" alt="" style="height:150px">
        <div class="caption">
            <h3>
                <a asp-controller="MediaResources" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a>
            </h3>
            <p>@Model.Description</p>
        </div>
    </div>
</div>
