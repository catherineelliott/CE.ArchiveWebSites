@model CE.ArchiveWebSites.Core.Areas.ECommerce.ViewModels.ShoppingCartViewModel

<h2>Your shopping cart</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Selected amount</th>
            <th>Media Resource Id</th>
            <th>Size</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@line.Amount</td>
                <td class="text-left">@line.MediaResourceId</td>
                <td class="text-left">@line.OrderSize.Size</td>
                <td class="text-right">@line.Cost.ToString("c")</td>
                <td class="text-right">
                    @((line.Amount * line.Cost).ToString("c"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Total:</td>
            <td class="text-right">
                @Model.ShoppingCartTotal.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-area="ECommerce" asp-controller="Order" asp-action="Checkout">Check out now!</a>
</div>



